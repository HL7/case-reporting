                    <valueSet value="http://example.org/fhir/ValueSet/valueset-dxtc-example"/>
                </codeFilter>
            </input>
            <input id="encounters">
                <extension url="http://hl7.org/fhir/us/ecr/StructureDefinition/us-ph-fhirquerypattern-extension">
                    <valueString value="Encounter?reason-code:in=http://example.org/fhir/ValueSet/valueset-dxtc-example&amp;patient=Patient/{{context.patientId}}"/>
                </extension>
                <type value="Encounter"/>
                <codeFilter>
                    <path value="reasonCode"/>
                    <valueSet value="http://example.org/fhir/ValueSet/valueset-dxtc-example"/>
                </codeFilter>
            </input>
            <input id="immunizations">
