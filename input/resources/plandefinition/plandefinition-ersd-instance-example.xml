                    <valueString value="Observation?code:in=http://example.org/fhir/ValueSet/valueset-lotc-example&amp;patient=Patient/{{context.patientId}}"/>
                </extension>
                <type value="Observation"/>
                <codeFilter>
                    <path value="code"/>
