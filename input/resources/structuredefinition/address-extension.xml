<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition
    xmlns="http://hl7.org/fhir">
    <id value="address-extension"/>
    <meta>
        <versionId value="3"/>
        <lastUpdated value="2020-11-25T01:54:40.453+00:00"/>
        <source value="#g83FvDaviaWf4wpx"/>
    </meta>
    <url value="http://hl7.org/fhir/us/ecr/StructureDefinition/address-extension"/>
    <version value="1.0.0"/>
    <name value="Address_Extension"/>
    <title value="Address Extension"/>
    <status value="active"/>
    <experimental value="false"/>
    <publisher value="HL7 Public Health Work Group"/>
    <description value="This Extension profile represents where the patient traveled to or visited as an address e.g.: country, state, city, street address (if applicable)."/>
    <fhirVersion value="4.0.1"/>
    <kind value="complex-type"/>
    <abstract value="false"/>
    <context>
        <type value="element"/>
        <expression value="Observation.component"/>
    </context>
    <context>
        <type value="element"/>
        <expression value="Observation"/>
    </context>
    <type value="Extension"/>
    <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Extension"/>
    <derivation value="constraint"/>
    
    <differential>
        <element id="Extension">
            <path value="Extension"/>
            <short value="Address"/>
            <definition value="Where the patient traveled to or visited as an address e.g. country, city, street address if applicable. At the least, address must contain the country."/>
            <max value="1"/>
        </element>
        <element id="Extension.url">
            <path value="Extension.url"/>
            <fixedUri value="http://hl7.org/fhir/us/ecr/StructureDefinition/address-extension"/>
        </element>
        <element id="Extension.value[x]">
            <path value="Extension.value[x]"/>
            <type>
                <code value="Address"/>
            </type>
            <example>
                <label value="for Address"/>
                <valueAddress>
                    <text value="Nadi FIJI"/>
                    <city value="Nadi"/>
                    <country value="FIJI"/>
                </valueAddress>
            </example>
            <mustSupport value="true"/>
        </element>
        <element id="Extension.value[x].use">
            <path value="Extension.value[x].use"/>
            <mustSupport value="true"/>
        </element>
        <element id="Extension.value[x].type">
            <path value="Extension.value[x].type"/>
            <mustSupport value="true"/>
        </element>
        <element id="Extension.value[x].line">
            <path value="Extension.value[x].line"/>
            <mustSupport value="true"/>
        </element>
        <element id="Extension.value[x].city">
            <path value="Extension.value[x].city"/>
            <mustSupport value="true"/>
        </element>
        <element id="Extension.value[x].district">
            <path value="Extension.value[x].district"/>
            <mustSupport value="true"/>
        </element>
        <element id="Extension.value[x].state">
            <path value="Extension.value[x].state"/>
            <mustSupport value="true"/>
            <binding>
                <strength value="preferred"/>
                <description value="United States Postal Service Two-Letter State and Possession Abbreviations"/>
                <valueSet value="http://hl7.org/fhir/us/core/ValueSet/us-core-usps-state"/>
            </binding>
        </element>
        <element id="Extension.value[x].postalCode">
            <path value="Extension.value[x].postalCode"/>
            <mustSupport value="true"/>
        </element>
        <element id="Extension.value[x].country">
            <path value="Extension.value[x].country"/>
            <min value="1"/>
            <max value="1"/>
            <mustSupport value="true"/>
        </element>
    </differential>
</StructureDefinition>