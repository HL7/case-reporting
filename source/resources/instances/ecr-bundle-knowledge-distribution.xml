    <entry>
        <fullUrl value="http://hl7.org/fhir/us/ecr/PlanDefinition/ecr-knowledge-distribution-triggering"/>
        <resource>
            <PlanDefinition> <!--Triggering-->
                <name value="Reportable Condition Trigger Codes (RCTC)"/>
                <text>
                    <status value="additional"/>
                    <div xmlns="http://www.w3.org/1999/xhtml">Triggers for initiating decision support for electronic case reports</div>
                </text>
                <version value="2017-10-13"/>
                <status value="draft"/>
                <effectivePeriod>
                    <start value="2017-01-13"/>
                </effectivePeriod>
                <action>
                    <description value="This action applies to all value sets in the RCTC bundle"/>
                    <textEquivalent value="Match codes in each value set and then process the Rules Processing Plan Definition"/>
                    <triggerDefinition>
                        <type value="data-added"/>
                        <eventData>
                            <type value="Codes"/>            
                            <codeFilter>
                                <path value="code"/>
                                <valueSetReference>
                                    <reference value="#value-set-bundle"/>
                                </valueSetReference>
                            </codeFilter>
                        </eventData>
                    </triggerDefinition>
                    <action>
                        <description value="This action applies to Diagnosis Value Set, OID: 2.16.840.1.113762.1.4.1146.627
                            All codes in this value set aree ICD 10 or SNOMED"/>
                        <textEquivalent value="Any Condition.code match with codes in the Diagnosis Value Set."/>
                        <triggerDefinition>
                            <type value="data-added"/>
                            <eventName value="Diagnoses or problems documented in a clinical record."/>
                            <eventData>
                                <type value="Diagnosis Codes"/>    
                                <codeFilter>
                                    <path value="code"/>
                                    <valueSetReference>
                                        <reference value="#diagnosis-value-set"/>
                                    </valueSetReference>
                                </codeFilter>
                            </eventData>
                        </triggerDefinition>     
                    </action>
                    <action>
                        <description value="This action applies to Organism Substance Value Set, OID: 2.16.840.1.113762.1.4.1146.628
                            All codes in this value set are SNOMED-CT"/>
                        <textEquivalent value="Any Observation.valueCodeableConcept match with codes in the Organism Substance Value Sets"/>
                        <triggerDefinition>
                            <type value="data-added"/>
                            <eventName value="Nominal laboratory result values documented in a clinical record."/>
                            <eventData>
                                <type value="Organism Substance Codes"/>    
                                <codeFilter>
                                    <path value="code"/>
                                    <valueSetReference>
                                        <reference value="#organism-substance-value-set"/>
                                    </valueSetReference>
                                </codeFilter>
                            </eventData>
                        </triggerDefinition>                
                    </action>
                    <action>
                        <description value="This action applies to Lab Orders Test Name Value Set, OID:  2.16.840.1.113762.1.4.1146.629
                            All codes in this value set are LOINC"/>
                        <textEquivalent value="Any ProcedureRequest.code match with codes in the Lab Order Test Value Set."/>
                        <triggerDefinition>
                            <type value="data-added"/>
                            <eventName value="Laboratory test names used in orders documented in a clinical record."/>
                            <eventData>
                                <type value="Lab Test Order Codes"/>    
                                <codeFilter>
                                    <path value="code"/>
                                    <valueSetReference>
                                        <reference value="#lab-order-test-name-value-set"/>
                                    </valueSetReference>
                                </codeFilter>
                            </eventData>
                        </triggerDefinition>   
                    </action>
                    <action>
                        <description value="This action applies to Lab Observations Test Name Value Set, OID:  2.16.840.1.113762.1.4.1146.630
                            All codes in this value set are LOINC"/>
                        <textEquivalent value="Any Observation.code match with codes in the Lab Observation Test Value Set."/>
                        <triggerDefinition>
                            <type value="data-added"/>
                            <eventName value="Laboratory test names used in observations documented in a clinical record."/>
                            <eventData>
                                <type value="Lab Test Order Codes"/>    
                                <codeFilter>
                                    <path value="code"/>
                                    <valueSetReference>
                                        <reference value="#lab-observation-test-name-value-set"/>
                                    </valueSetReference>
                                </codeFilter>
                            </eventData>
                        </triggerDefinition>   
                    </action>
                </action>
            </PlanDefinition>
        </resource>
    </entry>
